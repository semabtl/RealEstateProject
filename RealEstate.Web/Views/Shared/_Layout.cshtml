<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstate.Web</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
     <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <i class="bi bi-houses" style="font-size: 32px;"></i>
            <a class="navbar-brand fw-bold" href="#">B-Emlak</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    
                    <li class="nav-item">
                        <a class="nav-link @((string)ViewData["ActivePage"] == "Home" ? "active" : "")" aria-current="page" href="#">Anasayfa</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Satılık
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Konut</a></li>
                            <li><a class="dropdown-item" href="#">Arsa</a></li>
                            <li><a class="dropdown-item" href="#">İşyeri</a></li>
                        </ul>

                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Kiralık
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Konut</a></li>
                            <li><a class="dropdown-item" href="#">Arsa</a></li>
                            <li><a class="dropdown-item" href="#">İşyeri</a></li>
                        </ul>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Kurumsal Üyelik</a>
                    </li>
                    
                </ul>
                <a class="ms-auto btn text-white fw-bold rounded-pill" id="loginButton" href="#" role="button" style="color: black;">Giriş Yap / Üye Ol</a>

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>
