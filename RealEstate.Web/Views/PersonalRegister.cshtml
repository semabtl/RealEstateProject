@using RealEstate.DataAccess.Models;
@model RealEstate.DataAccess.Models.PersonalRegisterModel;
@{
    ViewBag.Title = "Bireysel Üyelik";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href=" ~/css/styles.css">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center">
        <div class="col-4 p-3 mt-5">
            <form asp-action="PersonalRegister" method="post">
                <p style="text-align: center;" class="fw-bold fs-3">Üyelik Bilgileri</p>
                <div asp-validation-summary="All" class="text-danger"></div>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
                <div class="mb-3">
                    <input class="form-control" id="InputName" name="Name" placeholder="Ad">
                </div>
                <div class="mb-3">
                    <input class="form-control" id="InputSurname" name="Surname" placeholder="Soyad">
                </div>
                <div class="mb-3">
                    <input class="form-control" id="InputPhoneNumber" name="PhoneNumber" placeholder="Telefon Numarası">
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" name="Email" placeholder="E-Posta Adresi">
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" id="InputPassword" name="Password" placeholder="Şifre">
                </div>
                <button type="submit" class="btn btn-secondary d-grid gap-2 col-8 mx-auto">Üye Ol</button>
            </form>    
        </div>
    </div>

</body>
