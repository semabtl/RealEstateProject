@model IEnumerable<ContactApplicationModel>

@{
    ViewBag.Title = "Mesajlar";
}

<body>
    <h4 class="mt-5 mb-5">Mesajlar</h4>
    <div class="container text-center">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (Model != null && Model.Any())
        {
            int i = 1;
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Ad</th>
                        <th scope="col">Soyad</th>
                        <th scope="col">Telefon Numarası</th>
                        <th scope="col">Mesaj</th>
                        <th scope="col"> </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var application in Model)
                    {

                        <tr>
                            <th scope="row">@i</th>
                            <td>@application.Name</td>
                            <td>@application.Surname</td>   
                            <td>@application.PhoneNumber</td>
                            <td>@application.MessageText</td>

                            <td>
                                <form id="deleteForm" method="post" action="@Url.Action("DeleteContactMessage", "Admin")"> 
                                    <input type="hidden" name="ContactApplicationID" value="@application.ContactApplicationID" />
                                    <button type="submit" class="btn text-center" role="button" style="color: red;">
                                        <i class="bi bi-trash3 me-1"></i>
                                        Sil
                                    </button>
                                </form>
                            </td>

                        </tr>
                        i++;
                    }

                </tbody>
            </table>
        }
    </div>
</body>
